meta {
  name: GET Books
  type: http
  seq: 1
}

get {
  url: {{HOST}}:{{PORT}}/api/v1/goodbye/{{RANDOM_NAME}}
  body: none
  auth: none
}

script:pre-request {
  const randomName = bru.interpolate('{{$randomFirstName}}');
  bru.setVar("RANDOM_NAME", randomName);
}

script:post-response {
  test("Goodbye GET - HTTP 200", function () {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Goodbye GET - Response", function () {
    const body = res.getBody();
    expect(body).to.exist;
  });
  
  test("Goodbye GET - Response String", function () {
    const body = res.getBody();
    expect(body).to.be.a("string")
  });
}
